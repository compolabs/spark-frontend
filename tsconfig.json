{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@themes": ["src/themes"],
      "@themes/*": ["src/themes/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@stores": ["src/stores"],
      "@stores/*": ["src/stores/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@blockchain": ["src/blockchain"],
      "@blockchain/*": ["src/blockchain/*"],
      "@entity": ["src/entity"],
      "@entity/*": ["src/entity/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@src": ["src"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
